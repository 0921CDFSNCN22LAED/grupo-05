<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ("../partials/head") %>

        <title>Registro</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="/css/register.css" />
    </head>

    <body>
        <header><%- include ("../partials/header") %></header>
        <main class="register-main-container">
            <img
                src="/images/bg-login-mobile.jpeg"
                class="register-mobile-bg-img"
            />
            <img
                src="/images/venus-birth.jpeg"
                class="register-desktop-bg-img"
            />

            <form
                action="/users/registro"
                method="POST"
                class="register-form-container box-shadow"
            >
                <section>
                    <h4>Regístrate con:</h4>
                    <div class="register-div-google">
                        <button
                            type="submit"
                            name="button-google"
                            class="button-google box-shadow btn-secondary"
                        >
                            <a href="">
                                <i class="fab fa-google google-icon"></i>
                                <span>Google</span>
                            </a>
                        </button>
                    </div>
                    <div class="register-div-fb">
                        <button
                            type="submit"
                            name="button-fb"
                            class="button-facebook box-shadow btn-secondary"
                        >
                            <a href="">
                                <i class="fab fa-facebook-f fb-icon"></i>
                                <span>Facebook</span>
                            </a>
                        </button>
                    </div>
                </section>

                <section>
                    <h4>Información Personal:</h4>
                    <div class="register-div-name">
                        <label for="name" class="form-label"></label>
                        <input
                            class="register-imput-name box-shadow form-control"
                            name="name"
                            id="name"
                            type="text"
                            placeholder=" Nombre y Apellido"
                            value="<%= locals.old && old.name ? old.name : ''%>"
                        />
                        <% if (locals.errors) { %>
                            <% for (let error of errors) { %>
                                <% if (error.param == 'name') { %>
                                    <p class="register-invalid-text-input"><%= error.msg %> </p>
                        <% } %> <% } %> <% } %>
                    </div>
                    <div class="register-div-email">
                        <label for="email" class="form-label"></label>
                        <input
                            type="email"
                            name="email"
                            id="email"
                            placeholder=" Correo Electrónico"
                            class="register-imput-email box-shadow form-control"
                            value="<%= locals.old && old.email ? old.email : ''%> "
                        />
                        <% if (locals.errors) { %>
                            <% for (let error of errors) { %>
                                <% if (error.param == 'email') { %>
                                    <p class="register-invalid-text-input"><%= error.msg %> </p>
                        <% } %> <% } %> <% } %>
                    </div>
                    <div class="register-div-date">
                        <label for="birthday" class="form-label"
                            >Fecha de Nacimiento:</label
                        >
                        <input
                            type="date"
                            name="birthday"
                            id="birthday"
                            class="box-shadow form-control"
                            value="<%= locals.old && old.birthday ? old.birthday : ''%> "
                        />
                        <% if (locals.errors) { %>
                            <% for (let error of errors) { %>
                                <% if (error.param == 'birthday') { %>
                                    <p class="register-invalid-text-input"><%= error.msg %> </p>
                        <% } %> <% } %> <% } %>
                    </div>
                    <div class="register-div-dni">
                        <label for="DNI" class="form-label"></label>
                        <input
                            class="register-imput-dni box-shadow form-control"
                            type="number"
                            name="dni"
                            id="dni"
                            placeholder=" DNI"
                            value="<%= locals.old && old.dni ? old.dni : ''%> "
                        />
                        <% if (locals.errors) { %>
                            <% for (let error of errors) { %>
                                <% if (error.param == 'dni') { %>
                                    <p class="register-invalid-text-input"><%= error.msg %> </p>
                        <% } %> <% } %> <% } %>
                    </div>
                </section>

                <section>
                    <h4>Informacion de Inicio de Sesion:</h4>
                    <div class="register-div-password">
                        <label for="password" class="form-label"></label>
                        <input
                            type="password"
                            name="password"
                            id="password"
                            placeholder=" Contraseña"
                            class="register-imput-password box-shadow form-control"
                        />
                        <% if (locals.errors) { %>
                            <% for (let error of errors) { %>
                                <% if (error.param == 'password') { %>
                                    <p class="register-invalid-text-input"><%= error.msg %> </p>
                        <% } %> <% } %> <% } %>
                    </div>
                    <div class="register-div-password">
                        <label
                            for="confirm-password"
                            class="form-label"
                        ></label>
                        <input
                            type="password"
                            name="confirm-password"
                            id="confirm-password"
                            placeholder=" Confirmar Contraseña"
                            class="register-imput-password box-shadow form-control"
                        />
                        <% if (locals.errors) { %>
                            <% for (let error of errors) { %>
                                <% if (error.param == 'confirm-password') { %>
                                    <p class="register-invalid-text-input"><%= error.msg %> </p>
                        <% } %> <% } %> <% } %>
                    </div>
                </section>

                <section>
                    <div class="register-div-enter">
                        <button
                            type="submit"
                            name="button-enter"
                            class="register-button-enter box-shadow btn-secondary"
                        >
                            <p>INGRESAR<p>
                        </button>
                    </div>

                    <div class="register-div-to-login">
                        <p>
                            ¿Ya tienes una cuenta?
                            <a class="link" href="/users/login">Iniciar Sesion</a>
                        </p>
                    </div>
                </section>
            </form>
        </main>

        <footer><%- include ("../partials/footer") %></footer>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
