<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("../partials/head") %>
    <title><%= pageTitle %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/editarProducto.css" />
  </head>
  <body class="editarProducto-body">
    <header><%- include ("../partials/header") %></header>
    <main class="editarProducto-main-container">
      <img src="/images/mobile-bg-black-2.jpeg" class="mobile-bg-img" />
      <img src="/images/bg-edit.jpeg" class="desktop-bg-img" />
      <form
        class="editarProducto-form-container"
        action="/products/editar/<%= vino.id %>?_method=PUT"
        method="post"
        enctype="multipart/form-data"
      >
        <h2>EDITAR PRODUCTO</h2>
        <div>
          <label for="nombre" class="form-label">Nombre</label>
          <% if (vino) {%>
          <input
            class="box-shadow form-control"
            type="text"
            name="nombre"
            id="nombre"
            value="<%= vino.nombre %>"
          />
          <% } %>
        </div>
        <div>
          <label for="descripcionProducto" class="form-label">Bodega:</label>
          <% if (vino) {%>
          <input
            class="box-shadow form-control"
            type="text"
            name="bodega"
            id="bodega"
            value="<%= vino.bodega %>"
          />
          <% } %>
        </div>
        <div>
          <label for="precioProducto" class="form-label">Precio:</label>
          <% if (vino) {%>
          <input
            class="box-shadow form-control"
            type="number"
            name="precio"
            id="precio"
            value="<%= vino.precio %>"
          />
          <% } %>
        </div>
        <div>
          <label for="precioProducto" class="form-label">Descripcion:</label>
          <% if (vino) {%>
          <textarea
            class="editarProducto-text-area box-shadow form-control"
            name="descripcion"
            id="descripcion"
            cols="30"
            rows="10"
          >
<%= vino.descripcion %></textarea
          >
          <% } %>
        </div>
        <div class="editarProducto-div-img-product">
          <label for="imagenProducto" class="form-label"
            >Imagen del producto:
          </label>
          <input
            class="editarProducto-input-img-product"
            type="file"
            accept="image/jpg"
            name="imagen"
            id="imagen"
            value="<%= vino.imagen %>"
          />
        </div>
        <div class="editarProducto-div-button">
          <button
            class="editarProducto-button btn-secondary"
            type="submit"
            value="Editar producto"
          >
            Editar
          </button>
        </div>
      </form>
    </main>
    <footer><%- include ("../partials/footer") %></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
