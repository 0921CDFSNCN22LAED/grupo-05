<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/head") %>
        <title>Cuenta</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:ital,wght@1,700&family=Cinzel:wght@700&family=Josefin+Sans:ital@1&family=Lexend:wght@700&family=Monoton&family=Oswald&family=Playfair+Display:ital,wght@1,600&family=Pontano+Sans&family=Roboto&family=Syncopate&display=swap"
            rel="stylesheet" />
        <link rel="stylesheet" href="/css/cuenta.css" />
</head>

<body>
    <header>
        <%- include ("../partials/header") %>
    </header>
    <main>
        <% if (locals.isAdmin) { %>
            <div class="cuenta_container cuenta_container_admin">
                <h2>Informacion de tu cuenta</h2>

                <div class="input-wrapper input-wrapper-admin">
                    <div class="cuenta_container-info-input cuenta_container-info-input-admin">
                        <input class="form-control" type="text" value="<%= user.nombre %>" disabled readonly />
                    </div>
                    <div class="cuenta_container-info-input cuenta_container-info-input-admin">
                        <input class="form-control" type="text" value="<%= user.email %>" disabled readonly />
                    </div>
                </div>
                <div class="cuenta_container-info">
                    <img src="<%= user.imagen %>" class="img-usurio img-usurio-admin" />
                </div>
                <div class="cuenta_container-boton">
                    <div class="button-wrapper">
                        <a class="cuenta_boton-editar btn-secondary" href="/users/editar/<%= user.id %>">EDITAR</a>
                    </div>
                    <div class="button-wrapper">
                        <a class="cuenta_boton-editar btn-secondary" href="/users/logout">LOGOUT</a>
                    </div>
                </div>
            </div>
            <% } else { %>
                <div class="cuenta_container">
                    <h2>Informacion de tu cuenta</h2>

                    <div class="input-wrapper">
                        <div class="cuenta_container-info-input">
                            <input class="form-control" type="text" value="<%= user.nombre %>" disabled readonly />
                        </div>
                        <div class="cuenta_container-info-input">
                            <input class="form-control" type="text" value="<%= user.email %>" disabled readonly />
                        </div>
                    </div>
                    <div class="cuenta_container-info">
                        <img src="<%= user.imagen %>" class="img-usurio" />
                    </div>
                    <div class="cuenta_container-boton">
                        <div class="button-wrapper">
                            <a class="cuenta_boton-editar btn-secondary" href="/users/editar/<%= user.id %>">EDITAR</a>
                        </div>
                        <div class="button-wrapper">
                            <a class="cuenta_boton-editar btn-secondary" href="/users/logout">LOGOUT</a>
                        </div>
                    </div>
                </div>

                <section class="wine-shelf">
                    <h2>Tus favoritos</h2>
                    <div class="flex-div">
                        <% for (let vino of vinos) { %>
                            <div class="articles-wrapper">
                                <article class="wine-card">
                                    <a href="/products/detalle/<%= vino.id %>"><img src="<%= vino.imagen %>" alt=""
                                            width="100%" class="wine-card-img" /></a>
                                    <div class="wine-card-body">
                                        <div class="wine-card-texts">
                                            <div class="wine-card-product-description">
                                                <h4 class="card-title">
                                                    <%= vino.nombre %>
                                                </h4>
                                            </div>
                                            <p class="card-text card-price">
                                                $<%= vino.precio %>
                                            </p>
                                        </div>
                                        <div class="wine-card-icons">
                                            <form action="/products/detalle/favorito/<%= vino.id %>" method="POST">
                                                <button type="submit" class="button-estrella-carrito">
                                                    <i class="fas fa-star"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </article>
                            </div>
                            <% } %>
                    </div>
                </section>
                <% } %>
    </main>
    <footer>
        <%- include ("../partials/footer") %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>